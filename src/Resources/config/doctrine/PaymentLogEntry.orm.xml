<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <mapped-superclass name="Brille24\SyliusOrderLogPlugin\Entity\PaymentLogEntry" table="brille24_payment_log_entry">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="date" type="datetime" />
        <field name="action" />
        <field name="data" type="json" />

        <many-to-one field="user" target-entity="Sylius\Component\Core\Model\AdminUserInterface"/>
        <many-to-one field="order" target-entity="Sylius\Component\Order\Model\OrderInterface" inversed-by="logEntries"/>
        <many-to-one field="payment" target-entity="Sylius\Component\Payment\Model\PaymentInterface" inversed-by="logEntries"/>
    </mapped-superclass>
</doctrine-mapping>
